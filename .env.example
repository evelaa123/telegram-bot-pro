# ===========================================
# Telegram AI Assistant - Environment Variables
# ===========================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=-1001234567890
TELEGRAM_CHANNEL_USERNAME=@your_channel

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key

# Qwen API (Alibaba Cloud DashScope)
QWEN_API_KEY=sk-your-qwen-api-key

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/telegram_ai_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=telegram_ai_bot

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Admin Panel
ADMIN_SECRET_KEY=your-super-secret-key-change-in-production
ADMIN_ACCESS_TOKEN_EXPIRE_MINUTES=30
ADMIN_REFRESH_TOKEN_EXPIRE_DAYS=7

# Default Admin Credentials (change after first login!)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# Environment
ENVIRONMENT=development
DEBUG=true

# Rate Limits (per user per day)
DEFAULT_TEXT_LIMIT=50
DEFAULT_IMAGE_LIMIT=10
DEFAULT_VIDEO_LIMIT=3
DEFAULT_VOICE_LIMIT=20
DEFAULT_DOCUMENT_LIMIT=10

# OpenAI Models
DEFAULT_GPT_MODEL=gpt-4o-mini
DEFAULT_IMAGE_MODEL=dall-e-3
DEFAULT_VIDEO_MODEL=sora-2
DEFAULT_WHISPER_MODEL=whisper-1

# Qwen Models
DEFAULT_QWEN_MODEL=qwen-plus
DEFAULT_QWEN_VL_MODEL=qwen-vl-plus

# Default AI Provider (openai or qwen)
DEFAULT_AI_PROVIDER=openai

# Streaming Configuration
STREAM_UPDATE_INTERVAL_MS=500
STREAM_TOKEN_BATCH_SIZE=15

# Subscription Cache TTL (seconds)
SUBSCRIPTION_CACHE_TTL=300

# Context Configuration
MAX_CONTEXT_MESSAGES=20
CONTEXT_TTL_SECONDS=1800

# File Limits
MAX_FILE_SIZE_MB=20
MAX_PDF_PAGES=50
MAX_EXCEL_ROWS=5000
MAX_PPT_SLIDES=100

# API Timeouts (seconds)
OPENAI_TIMEOUT=120
TELEGRAM_TIMEOUT=30

# Worker Configuration
WORKER_CONCURRENCY=4
VIDEO_POLL_INTERVAL=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS (for admin panel)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
