# ===========================================
# Telegram AI Assistant "Твой ассистент"
# Environment Variables
# ===========================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=-1001234567890
TELEGRAM_CHANNEL_USERNAME=@asbrabets

# ===========================================
# AI Providers
# ===========================================

# CometAPI - Main AI Provider (Qwen-3-Max, DALL-E, Sora, Whisper)
COMETAPI_API_KEY=sk-your-cometapi-key

# GigaChat - For Presentation Generation
# Get credentials from https://developers.sber.ru/
# Format: Base64(client_id:client_secret)
GIGACHAT_CREDENTIALS=your-base64-encoded-credentials
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# OpenAI API (Legacy/Fallback)
OPENAI_API_KEY=sk-your-openai-api-key

# Qwen API (Legacy - now via CometAPI)
QWEN_API_KEY=sk-your-qwen-api-key

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/telegram_ai_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=telegram_ai_bot

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Admin Panel
ADMIN_SECRET_KEY=your-super-secret-key-change-in-production
ADMIN_ACCESS_TOKEN_EXPIRE_MINUTES=30
ADMIN_REFRESH_TOKEN_EXPIRE_DAYS=7

# Default Admin Credentials (change after first login!)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# Environment
ENVIRONMENT=development
DEBUG=true

# ===========================================
# Rate Limits (per user per day) - FREE tier
# ===========================================
DEFAULT_TEXT_LIMIT=10
DEFAULT_IMAGE_LIMIT=5
DEFAULT_VIDEO_LIMIT=5
DEFAULT_VOICE_LIMIT=5
DEFAULT_DOCUMENT_LIMIT=10
DEFAULT_PRESENTATION_LIMIT=3

# ===========================================
# Premium Subscription
# ===========================================
PREMIUM_PRICE_RUB=300

# Payment Provider: yookassa, robokassa
PAYMENT_PROVIDER=yookassa
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key

# ===========================================
# AI Models (via CometAPI)
# ===========================================
DEFAULT_TEXT_MODEL=qwen-3-max
DEFAULT_IMAGE_MODEL=dall-e-3
DEFAULT_VIDEO_MODEL=sora-2
DEFAULT_WHISPER_MODEL=whisper-1
DEFAULT_GIGACHAT_MODEL=GigaChat-2-Max

# Legacy settings (for backwards compatibility)
DEFAULT_GPT_MODEL=gpt-4o-mini
DEFAULT_QWEN_MODEL=qwen-plus
DEFAULT_QWEN_VL_MODEL=qwen-vl-plus

# Default AI Provider (cometapi is the main provider)
DEFAULT_AI_PROVIDER=cometapi

# Streaming Configuration
STREAM_UPDATE_INTERVAL_MS=500
STREAM_TOKEN_BATCH_SIZE=15

# Subscription Cache TTL (seconds)
SUBSCRIPTION_CACHE_TTL=300

# Context Configuration
MAX_CONTEXT_MESSAGES=20
CONTEXT_TTL_SECONDS=1800

# File Limits
MAX_FILE_SIZE_MB=20
MAX_PDF_PAGES=50
MAX_EXCEL_ROWS=5000
MAX_PPT_SLIDES=100

# API Timeouts (seconds)
OPENAI_TIMEOUT=120
TELEGRAM_TIMEOUT=30

# Worker Configuration
WORKER_CONCURRENCY=4
VIDEO_POLL_INTERVAL=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS (for admin panel)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
